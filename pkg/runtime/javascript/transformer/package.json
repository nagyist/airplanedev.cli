{
  "name": "transformer",
  "version": "1.0.0",
  "private": true,
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "build": "esbuild ./index.ts --bundle --platform=node --minify --outfile=index.js",
    "lint": "prettier --check . && tsc",
